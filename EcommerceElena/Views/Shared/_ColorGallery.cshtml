@model IEnumerable<EcommerceElena.Models.Produit>

    <style>
        div {text-align : center }
        .bold {font-weight:bold}
    </style>

    <h4>Produits de même couleur</h4>

@foreach (var item in Model)
{
    <div style="display:inline-block;margin:20px;">
        <p>
            <a href="~/Produit/Details/@item.idProd">
                <img src="@Url.Content("~/Images/" + item.idProd + "_" + item.imageUrl)" width="170" />
            </a>
        </p>
        <p>
            @Html.DisplayFor(modelItem => item.nomProd)
        </p>
        <p class="bold">
            @Html.DisplayFor(modelItem => item.PrixProd)
        </p>
    </div>
}